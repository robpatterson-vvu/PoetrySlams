{
  "name": "partner-reference-application",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-common-content": "^3.0.1",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-poetryslams": "cds watch --open poetryslams/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy partner-reference-application --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "features": {
      "assert_integrity": "db"
    },
    "requires": {
      "[production]": {
        "auth": "xsuaa",
        "multitenancy": true
      },
      "destinations": true,
      "html5-repo": true
    },
    "profile": "with-mtx-sidecar"
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/poetryslams"
  ]
}
